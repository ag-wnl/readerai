{
    "name" : "Readerai",
    "version" : "0.0.1",
    "description" : "Adding some smartness to the text you're reading.",
    "manifest_version": 3,
    "background" : {    
        "service_worker" : "background.js",
        "type": "module"
    },
    "permissions" : ["storage","unlimitedStorage","activeTab","tabs","scripting","contextMenus","webRequest"], 
    "action" : {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
          "resources": [ "notes.html", "textsearch.svg", "translate.svg"],
          "matches": [ "<all_urls>" ]
        }
      ],
    "icons" : {
        "128" : "logo.png"
        
    },
    "content_scripts": [
        {
            "matches" : ["<all_urls>"],
            "js" : ["jq.js","./scripts/text_selection.js", "./scripts/un_highlight.js", "./scripts/darkmode.js", "scripts/content.js", "./scripts/plot_compute.js"]
        }
    ]
}